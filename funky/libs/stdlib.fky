module stdlib where

    otherwise = True

    # Identity function
    id x = x

    # Constant function
    const x = lambda _ -> x

    # Boolean negation
    not  True   =  False
    not  False  =  True

    # Flipping function application
    flip f x y = f y x

    # Function composition
    compose f g x = f (g x)

    # Repetition
    frepeat f 0 x = x
    frepeat f n x given n < 0     = error "Cannot repeat for n < 0."
                  given otherwise = f (frepeat f (n - 1) x)
